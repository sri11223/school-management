# Backend Service Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database Configuration
# For development - local database in project folder
DB_PATH=./data/edumanage.db

# For production - Windows AppData folder
# DB_PATH=%LOCALAPPDATA%\EduManage Pro\database\edumanage.db

# Logging Configuration
LOG_LEVEL=2

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# File Upload Configuration
MAX_FILE_SIZE=10mb
UPLOAD_PATH=./uploads

# AI/Gemini Configuration (for future features)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30
