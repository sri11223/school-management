{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": false,
    "baseUrl": ".",
    "paths": {
      "@edumanage/ui-components": ["packages/ui-components/src/index.ts"],
      "@edumanage/core-logic": ["packages/core-logic/src/index.ts"],
      "@edumanage/database": ["packages/database/src/index.ts"],
      "@edumanage/ai-engine": ["packages/ai-engine/src/index.ts"],
      "@edumanage/whatsapp-service": ["packages/whatsapp-service/src/index.ts"],
      "@edumanage/utils": ["packages/utils/src/index.ts"],
      "@edumanage/types": ["packages/types/src/index.ts"]
    }
  },
  "include": [],
  "exclude": ["node_modules", "tmp"]
}
